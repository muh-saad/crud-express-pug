// Modal Update Product
form(action='/product/update' method='post')
    #EditModal.modal.fade(tabindex='-1' role='dialog' aria-labelledby='updateProduct' aria-hidden='true')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5#updateProduct.modal-title Edit Product
                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                        span(aria-hidden='true') &times;
                .modal-body
                    .form-group
                        input.form-control.productName(type='text' name='productName' placeholder='Name' required='')
                    .form-group
                        input.form-control.productPrice(type='text' name='productPrice' placeholder='Price' required='')
                .modal-footer
                    input.productId(type='hidden' name='productId')
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Close
                    button.btn.btn-primary(type='submit') Update